<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="external_data_serializer_form_view_inherit" model="ir.ui.view">
	<field name="inherit_id" ref="external_data_base.external_data_serializer_form_view"/>
	<field name="name">External Data Serializer Jinja2</field>
	<field name="model">external.data.serializer</field>
	<field name="arch" type="xml">
	    <xpath expr="//notebook" position="inside">
		<page string="Jinja2 settings" attrs="{'invisible': [('engine', '!=', 'jinja2')]}">
		    <field name="jinja2_template"
			   style="font-family: monospace;" class="bg-dark text-light px-2"/>
		</page>
	    </xpath>
	</field>
    </record>

</odoo>
