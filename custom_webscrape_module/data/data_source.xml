<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Data Source -->
    <record model="external.data.source" id="meleget_hu_data_source">
        <field name="name">meleget.hu</field>
    </record>

    <!-- List Resource -->
    <record model="external.data.resource" id="meleget_hu_resource_sitemap">
	<field name="data_source_id" ref="meleget_hu_data_source"/>
	<field name="name">meleget.hu/sitemap.xml</field>
        <field name="url">https://www.meleget.hu/sitemap.xml</field>
	<field name="foreign_type_ids" eval="[(4, ref('meleget_hu_foreign_type_sitemap'), 0)]"/>
    </record>

    <!-- Fetchers -->
    <record model="external.data.transporter" id="meleget_hu_fetcher">
	<field name="name">meleget.hu fetcher</field>
	<field name="protocol">http</field>
    </record>

    <!-- Strategies -->
    <record model="external.data.strategy" id="meleget_hu_strategy_pull">
	<field name="name">meleget.hu pull</field>
	<field name="operation">pull</field>
        <field name="data_source_id" ref="meleget_hu_data_source"/>
	<field name="transporter_id" ref="meleget_hu_fetcher"/>
	<field name="serializer_id" ref="external_data_parser_meleget_hu"/>
    </record>

    <record model="external.data.strategy" id="meleget_hu_strategy_list">
	<field name="name">meleget.hu list</field>
	<field name="operation">list</field>
        <field name="data_source_id" ref="meleget_hu_data_source"/>
	<field name="transporter_id" ref="meleget_hu_fetcher"/>
	<field name="serializer_id" ref="external_data_parser_sitemap"/>
	<field name="deferred_create" eval="True"/>
    </record>

    <!-- List Field Mapping -->
    <record model="external.data.field.mapping" id="meleget_hu_mapping_sitemap">
        <field name="data_source_id" ref="meleget_hu_data_source"/>
        <field name="strategy_id" eval="[(4, ref('meleget_hu_strategy_list'), 0)]"/>
        <field name="name">url &gt; sitemap</field>
	<field name="sequence">1</field>
        <field name="model_id" ref="external_data_base.model_external_data_resource"/>
	<field name="foreign_type_id" ref="meleget_hu_foreign_type_sitemap"/>
	<field name="foreign_id_field_id" ref="meleget_hu_foreign_type_sitemap_field_loc"/>
    </record>

    <record model="external.data.field.mapping.line" id="meleget_hu_mapping_sitemap_field_name">
        <field name="field_mapping_id" ref="meleget_hu_mapping_sitemap"/>
	<field name="foreign_field_id" ref="meleget_hu_foreign_type_sitemap_field_loc"/>
        <field name="odoo_field_id" ref="external_data_base.field_external_data_resource__name"/>
    </record>

    <record model="external.data.field.mapping.line" id="meleget_hu_mapping_sitemap_field_url">
        <field name="field_mapping_id" ref="meleget_hu_mapping_sitemap"/>
	<field name="foreign_field_id" ref="meleget_hu_foreign_type_sitemap_field_loc"/>
        <field name="odoo_field_id" ref="external_data_base.field_external_data_resource__url"/>
    </record>

    <record model="external.data.field.mapping.line" id="meleget_hu_mapping_sitemap_field_last_mod">
        <field name="field_mapping_id" ref="meleget_hu_mapping_sitemap"/>
	<field name="foreign_field_id" ref="meleget_hu_foreign_type_sitemap_field_lastmod"/>
        <field name="odoo_field_id" ref="external_data_base.field_external_data_resource__last_mod"/>
    </record>
    <record model="external.data.rule" id="meleget_hu_mapping_sitemap_rule_last_mod">
        <field name="field_mapping_id" ref="meleget_hu_mapping_sitemap"/>
	<field name="pre_post">pre</field>
	<field name="name">last_mod parse time</field>
	<field name="key">last_mod</field>
	<field name="sequence">1</field>
	<field name="operation">parse_time</field>
	<field name="parse_time_pattern">%Y-%m-%dT%H:%M:%S%z</field>
    </record>

</odoo>    
