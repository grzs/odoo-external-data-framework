<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_inherit">
	<field name="name">Product Template Form Inherit Sales HTML</field>
	<field name="model">product.template</field>
	<field name="inherit_id" ref="product.product_template_form_view"/>
	<field name="arch" type="xml">
	    <group name="description" position="after">
		<group string="Sales Description HTML" name="description_html">
                    <field name="description_sale_html" nolabel="1"
			   placeholder="HTML snippet to insert to website product page"/>
                </group>
	    </group>
	</field>
    </record>
</odoo>
