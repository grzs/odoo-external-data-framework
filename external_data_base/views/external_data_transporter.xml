<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Window actions -->
    <record id="external_data_transporter_action_window" model="ir.actions.act_window">
	<field name="name">External Data Transporter</field>
	<field name="res_model">external.data.transporter</field>
    </record>

    <!-- Views -->
    <record id="external_data_transporter_list_view" model="ir.ui.view">
	<field name="name">External Data transporters</field>
	<field name="model">external.data.transporter</field>
	<field name="arch" type="xml">
	    <tree>
		<field name="name"/>
		<field name="protocol"/>
	    </tree>
	</field>
    </record>
    
    <record id="external_data_transporter_form_view" model="ir.ui.view">
	<field name="name">External Data Transporter</field>
	<field name="model">external.data.transporter</field>
	<field name="arch" type="xml">
	    <form>
		<sheet>
		    <group>
			<field name="name"/>
			<field name="protocol"/>
		    </group>
		    <notebook>
			<page string="HTTP settings"
			      attrs="{'invisible': [('protocol', '!=', 'http')]}">
			    <group>
				<field name="http_request_method"/>
				<field name="http_body_json"/>
				<field name="http_cookiejar"/>
			    </group>
			    <separator string="Cookiejar actions"/>
			    <button string="New cookiejar" type="action"
				    name="external_data_base.cookiejar_wizard_action_form"/>
			    <button string="Load cookiejar" type="object"
				    name="http_cookiejar_load"/>
			    <button string="Save cookiejar" type="object"
				    name="http_cookiejar_save"/>
			    <separator string="Headers"/>
			    <field name="http_credential_ids_headers">
				<tree>
				    <field name="name"/>
				    <field name="key"/>
				</tree>
			    </field>
			</page>
		    </notebook>
		</sheet>
	    </form>
	</field>
    </record>
    
    <record id="external_data_credential_form_view" model="ir.ui.view">
	<field name="name">External Data Credential</field>
	<field name="model">external.data.credential</field>
	<field name="arch" type="xml">
	    <form>
		<sheet>
		    <group>
			<field name="data_source_id"/>
			<field name="name"/>
			<field name="key"/>
			<field name="is_secret"/>
			<field name="value"
			       attrs="{'password': [('is_secret', '=', True)]}"/>
			<field name="document"
			       attrs="{'invisible': [('is_secret', '=', True)]}"/>
		    </group>
		</sheet>
	    </form>
	</field>
    </record>

</odoo>
