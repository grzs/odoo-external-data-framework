<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Window actions -->
    <record id="external_data_source_action_window" model="ir.actions.act_window">
	<field name="name">External Data Source</field>
	<field name="res_model">external.data.source</field>
    </record>

    <record id="external_data_package_action_window" model="ir.actions.act_window">
	<field name="name">External Data Package</field>
	<field name="res_model">external.data.package</field>
    </record>

    <!-- Views -->
    <record id="external_data_source_list_view" model="ir.ui.view">
	<field name="name">External Data sources</field>
	<field name="model">external.data.source</field>
	<field name="arch" type="xml">
	    <tree>
		<field name="name"/>
		<field name="batch_size"/>
		<field name="last_fetch"/>
	    </tree>
	</field>
    </record>

    <record id="external_data_source_form_view" model="ir.ui.view">
	<field name="name">External Data Source</field>
	<field name="model">external.data.source</field>
	<field name="arch" type="xml">
	    <form>
		<sheet>
		    <group>
			<field name="name"/>
			<field name="data_source_type_id"/>
		    </group>
		    <group>
			<field name="batch_size"/>
			<field name="last_fetch"/>
		    </group>
		    <separator string="Field mappings"/>
		    <field name="field_mapping_ids">
			<tree editable="bottom">
			    <field name="sequence" widget="handle"/>
			    <field name="name"/>
			    <button string="open" type="object"
				    name="button_details"
				    />
			    <field name="foreign_type"/>
			    <field name="model_id"/>
			    <field name="foreign_id_field_type_id"/>
			</tree>
		    </field>
		</sheet>
	    </form>
	</field>
    </record>

    <record id="external_data_package_list_view" model="ir.ui.view">
	<field name="name">External Data packages</field>
	<field name="model">external.data.package</field>
	<field name="arch" type="xml">
	    <tree decoration-danger="notes">
		<field name="name"/>
		<field name="last_mod"/>
		<field name="last_pull"/>
		<field name="last_push"/>
		<field name="skip"/>
		<field name="notes" invisible="1"/>
	    </tree>
	</field>
    </record>

    <record id="external_data_package_form_view" model="ir.ui.view">
	<field name="name">External Data package details</field>
	<field name="model">external.data.package</field>
	<field name="arch" type="xml">
	    <form>
		<sheet>
		    <group>
			<field name="name"/>
			<field name="data_source_id"/>
			<field name="priority"/>
			<field name="skip"/>
		    </group>
		    <group>
			<field name="valid_until"/>
			<field name="last_mod"/>
			<field name="last_pull"/>
			<field name="last_push"/>
		    </group>
		    <separator string="Notes"/>
		    <field name="notes"/>
		    <separator string="External objects"/>
		    <field name="object_ids">
			<tree>
			    <field name="foreign_id"/>
			    <field name="field_mapping_id"/>
			    <field name="priority"/>
			    <field name="last_sync"/>
			</tree>
		    </field>
		</sheet>
	    </form>
	</field>
    </record>

</odoo>
